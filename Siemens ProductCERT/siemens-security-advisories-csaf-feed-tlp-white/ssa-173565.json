  "vulnerabilities": [
    {
      "title": "CVE-2021-41546",
      "notes": [
        {
          "title": "Summary",
          "category": "summary",
          "text": "Affected devices write crashdumps without checking if enough space is available on the filesystem. Once the crashdump fills the entire root filesystem, affected devices fail to boot successfully. An attacker can leverage this vulnerability to cause a permanent Denial-of-Service."
        }
      ],
