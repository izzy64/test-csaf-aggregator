  "vulnerabilities": [
    {
      "title": "CVE-2020-13988",
      "notes": [
        {
          "title": "Summary",
          "category": "summary",
          "text": "The TCP/IP stack (uIP) in affected devices is vulnerable to integer overflow when processing TCP Maximum Segment Size (MSS) options. (FSCT-2020-0008)\n\nAn attacker located in the same network could trigger a Denial-of-Service condition on the device by sending a specially crafted IP packet."
        }
      ],
      "cve": "CVE-2020-13988",
      "cwe": {
        "id": "CWE-190",
        "name": "Integer Overflow or Wraparound"
      },
