  "vulnerabilities": [
    {
      "cve": "CVE-2021-43527",
      "cwe": {
        "id": "CWE-787",
        "name": "Out-of-bounds Write"
      },
      "notes": [
        {
          "category": "summary",
          "text": "A vulnerability was found in the way the third-party component, NSS, verifies certificates that could allow an attacker to remotely execute code or cause a denial-of-service condition on the affected devices.\n\nThis vulnerability could be triggered if a device connects to an attacker posing as an IPSEC endpoint that provides a malicious certificate. The device maybe vulnerable when it attempts the verification of the received certificate.",
          "title": "Summary"
        }
      ],
