  "vulnerabilities": [
    {
      "cve": "CVE-2018-18440",
      "cwe": {
        "id": "CWE-119",
        "name": "Improper Restriction of Operations within the Bounds of a Memory Buffer"
      },
      "notes": [
        {
          "category": "summary",
          "text": "The embedded DENX U-Boot boot loader has a locally exploitable buffer overflow via a crafted kernel image because filesystem loading is mishandled.\n\nThe security vulnerability could be exploited by an attacker with local access to the affected systems. The vulnerability could allow an attacker to compromise confidentiality, integrity and availability of the system.\n\nAt the time of advisory publication no public exploitation of this security vulnerability was known.",
          "title": "Summary"
        }
